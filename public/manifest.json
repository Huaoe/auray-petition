{
  "name": "Pétition Laïcité - Sécularisation des Églises Surnuméraires",
  "short_name": "Laïcité & Sécularisation",
  "description": "Signez la pétition citoyenne pour la sécularisation des églises surnuméraires. Transformons ces édifices vides en espaces publics utiles pour une République vraiment laïque.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1e40af",
  "theme_color": "#1e40af",
  "lang": "fr",
  "orientation": "portrait-primary",
  "categories": ["government", "social", "lifestyle"],
  "scope": "/",
  "id": "secularization-petition-app",
  "dir": "ltr",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "prefer_related_applications": false,
  
  "icons": [
    {
      "src": "/icons/icons/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icons/manifest-icon-512.maskable.png", 
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icons/apple-icon-180.png",
      "sizes": "180x180", 
      "type": "image/png",
      "purpose": "any"
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/?mailto=%s"
    }
  ],

  "launch_handler": {
    "client_mode": "navigate-existing"
  },

  "share_target": {
    "action": "/",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },

  "related_applications": [
    {
      "platform": "web",
      "url": "https://secularization-petition.vercel.app/"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "handle_links": "preferred"
}
